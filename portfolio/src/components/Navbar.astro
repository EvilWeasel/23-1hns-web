---
import { Icon } from "astro-icon/components";
---

<nav>
  <div class="logo">
    <Icon name="devicon:archlinux-wordmark" />
  </div>
  <ul class="nav-links">
    <li><a href="#about-me">About Me</a></li>
    <li><a href="#projects">Projects</a></li>
    <li><a href="#contact">Contact</a></li>
    <li><a href="/docs">Docs</a></li>
  </ul>
  <div class="theme-switch">
    <Icon name="mdi:shield-moon" class={"mooon"} />
    <Icon name="mdi:shield-sun" class={"sun"} />
  </div>
</nav>

<style>
  body.dark-mode [data-icon="mdi:shield-moon"] {
    display: none;
  }
  body.dark-mode [data-icon="mdi:shield-sun"] {
    display: block;
  }
  body:not(.dark-mode) [data-icon="mdi:shield-moon"] {
    display: block;
  }
  body:not(.dark-mode) [data-icon="mdi:shield-sun"] {
    display: none;
  }
  .theme-switch {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
  }
  [data-icon] {
    width: 40px;
    height: auto;
  }
  [data-icon="devicon:archlinux-wordmark"] {
    width: 120px;
    height: auto;
    margin: -0.5rem 0;
  }
  nav {
    display: flex;
    flex-direction: row;
    color: #cfcfcf;
    justify-content: space-between;
    max-height: 10vh;
  }
  nav ul.nav-links {
    list-style-type: none;
    padding-left: 0;
    display: flex;
    flex-direction: row;
    gap: 1rem;
    font-size: 1.2em;
    align-items: center;
  }
  nav ul > li:first-child a {
    border-left: 1px solid #cfcfcf;
    padding-left: 1rem;
  }
  nav ul a {
    border-right: 1px solid #cfcfcf;
    padding-right: 1rem;
    color: hsl(0, 0%, 81%);
    text-decoration: none;
    font-family: "MonaspaceXenonVar";
    font-variation-settings:
      "wght" 100,
      "wdth" 100,
      "slnt" 0;
    transition: all 0.25s ease-in;
  }
  nav ul a:hover {
    text-shadow: 0px 0px 15px #da6bff;
    color: #da6bff;
    font-variation-settings:
      "wght" 500,
      "wdth" 100,
      "slnt" -11;
  }
  .dark-mode {
    background-color: #1a1a1a;
    color: #ffffff;
  }

  .dark-mode nav ul li a {
    color: #ffffff;
  }

  .dark-mode nav ul li a:hover {
    text-shadow: 0px 0px 15px #6b63ff;
    color: #6b63ff;
  }
</style>
