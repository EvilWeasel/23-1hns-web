---
import { Image } from "astro:assets";

interface Props {
  image: ImageMetadata;
  alt: string;
}

const { image, alt } = Astro.props;
---

<div class="card">
  <Image src={image} alt={alt} id={"card-image"} />
  <svg viewBox="0 0 600 600" xmlns="http://www.w3.org/2000/svg">
    <defs>
      <linearGradient id="gradient" x1="0%" x2="0%" y1="0%" y2="100%">
        <stop offset="0%" stop-color="#2a73f5"></stop>
        <stop offset="100%" stop-color="#fc46d5"></stop>
      </linearGradient>
    </defs>
    <path
      d="
        M 0 600
        L 0 240
        L 450 150
        C 450 150 600 100 600 240
        L 600 600
        L 0 600
        "
    ></path>
  </svg>
</div>

<style>
  .card {
    position: relative;
    width: 300px;
    height: auto;
  }
  svg {
    stroke-width: 0.5rem;
    fill: url(#gradient);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    margin-top: 0.3rem;
  }
  #card-image {
    width: 100%;
    height: 100%;
  }
</style>
